# ===========================================
# CONFIGURAÇÃO DE PRODUÇÃO - FRONTEND
# ===========================================

# ===========================================
# URLs DOS MICROSERVIÇOS
# ===========================================

# Backend principal
VITE_API_URL=https://api.seudominio.com

# Microserviço de pagamentos
VITE_PAYMENTS_API_URL=https://payments.seudominio.com/api

# Microserviço Link AI
VITE_LINK_AI_API_URL=https://link-ai.seudominio.com/api

# Microserviço Biolink
VITE_BIOLINK_API_URL=https://biolink.seudominio.com/api

# ===========================================
# CONFIGURAÇÕES DA EFÍ
# ===========================================

# Código do pagador (se necessário)
VITE_EFI_PAYEE_CODE=seu_payee_code_producao

# ===========================================
# CONFIGURAÇÕES DE PRODUÇÃO
# ===========================================

# Ambiente
NODE_ENV=production

# URL base da aplicação
VITE_APP_URL=https://seudominio.com

# ===========================================
# ANALYTICS E MONITORAMENTO
# ===========================================

# Google Analytics (se usar)
VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry (se usar)
VITE_SENTRY_DSN=https://sua-dsn-sentry@sentry.io/projeto

# ===========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ===========================================

# Chave para criptografia local
VITE_ENCRYPTION_KEY=sua-chave-criptografia-32-chars

# ===========================================
# CONFIGURAÇÕES DE CACHE
# ===========================================

# TTL do cache (em segundos)
VITE_CACHE_TTL=3600

# ===========================================
# CONFIGURAÇÕES DE PWA
# ===========================================

# Nome da aplicação
VITE_APP_NAME=MeuLink

# Descrição da aplicação
VITE_APP_DESCRIPTION=Plataforma de criação de páginas com IA

# ===========================================
# CONFIGURAÇÕES DE REDE
# ===========================================

# Timeout para requisições (em ms)
VITE_REQUEST_TIMEOUT=30000

# Número máximo de tentativas
VITE_MAX_RETRIES=3
